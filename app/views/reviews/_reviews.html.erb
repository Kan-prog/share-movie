<ul class="media-list">
  <% reviews.each do |review| %>
    <li class="media">
      <div class="media-body">
        <div class="media-left">
          <%= image_tag @user.image.url %>
        </div>  
        <div>
          <%= link_to review.user.name, user_path(review.user) %> <span class="text-muted">posted at <%= review.created_at %></span>
        </div>
        <div>
          <p><%= review.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>