<% if current_user.like?(review) %>
  <%= form_tag(favorite_path(review.id), method: :delete) do %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= hidden_field_tag :type, 'Like' %>
    <%= submit_tag 'Unlike', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(favorites_path) do %>
    <%= hidden_field_tag :review_id, review.id %>
    <%= hidden_field_tag :type, 'Like' %>
    <%= submit_tag 'Like it', class: 'btn btn-primary' %>
  <% end %>
<% end %>